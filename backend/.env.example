# Database Configuration (Neon PostgreSQL)
# After creating your Neon database, replace these values
DATABASE_URL=jdbc:postgresql://<your-neon-host-address>/<your-db-name>?sslmode=require
DATABASE_USERNAME=<your-db-username>
DATABASE_PASSWORD=<your-db-password>

# JWT Configuration (generate a secure random key)
JWT_SECRET=your-very-secure-secret-key-change-this-in-production-minimum-256-bits
JWT_EXPIRATION=86400000

# Google OAuth2 Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:8081,https://<your-production-app-domain>